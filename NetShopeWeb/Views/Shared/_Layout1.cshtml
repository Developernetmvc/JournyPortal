</head>
<body class="bg-black">
    @*>>Webpage loader>>*@

    @*<div id="wpf-loader-two">
            <div class="wpf-loader-two-inner">
                <span>Loading</span>
            </div>
        </div>*@
    <!-- SCROLL TOP BUTTON -->
    <a class="scrollToTop" href="#"><i class="fa fa-chevron-up"></i></a>

    <!-- Start header section -->
    <header id="aa-header">
        <!-- start header top  -->
        <div class="aa-header-top">
            <div class="container bg-dark container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-top-area">
                            <!-- start header top left -->
                            <div class="aa-header-top-left">

                                <!-- start currency -->
                                <div class="aa-currency">
                                    <div class="dropdown">

                                        <a class="btn dropdown-toggle" href="#" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            <i class="fa fa-money"></i>INR



                                        </a>
                                    </div>
                                </div>
                                <!-- start cellphone -->
                                <div class="cellphone hidden-xs">

                                    <p><span class="fa fa-phone"></span>8411947042</p>

                                </div>
                            </div>
                            <!-- header top Right -->
                            <div class="aa-header-top-right">
                                <ul class="aa-head-top-nav-right">

                                    <li><a href="@(Session["username"] != null ? Url.Action("Index", "Account") : Url.Action("Login", "Account"))"><small class="text-white">My Account</small></a></li>

                                    <li class="hidden-xs">
                                        <a href="@(Session["username"] != null ? Url.Action("Index", "WishList") : Url.Action("Login", "Account"))">
                                            <small class="text-white">
                                                Wishlist
                                            </small> @if (@ViewBag.WlItemsNo > 0)
                                            {<text>(@ViewBag.WlItemsNo)</text>}
                                        </a>
                                    </li>

                                    <li class="hidden-xs">
                                        <a href="@(Session["username"] != null ? Url.Action("Index", "MyCart") : Url.Action("Login", "Account"))">
                                            <small class="text-white">
                                                My Cart
                                            </small> @if (@ViewBag.NoOfItem > 0)
                                            {<text>(@ViewBag.NoOfItem)</text>}
                                        </a>
                                    </li>

                                    <li class="hidden-xs"><a href="@(Session["username"] != null ? Url.Action("Index", "CheckOut") : Url.Action("Login", "Account"))"><small class="text-white">Checkout</small></a></li>

                                    @if (Session["username"] == null)
                                    {

                                        <li><a href="@Url.Action("Login","Account")"><small class="text-primary ">Login</small></a></li>
                                    }
                                    else
                                    {
                                        <li><a href="@Url.Action("Logout","Account")"><small class="text-danger ">Logout</small></a></li>
                                        <li><a href="">@Session["username"]</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- start header bottom  -->
        <div class="aa-header-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-header-bottom-area">
                            <!-- logo  -->
                            <div class="aa-logo">
                                <!-- Text based logo -->
                                <a href="@Url.Action("Index","Home")">

                                    <span class="fa fa-shopping-cart"></span>
                                    <p>NETSHOPNEXUS<strong></strong> <span>Trusted Online Shop</span></p>

                                </a>
                            </div>

                            <!-- cart box -->
                            <div class="aa-cartbox">
                                <a class="aa-cart-link" href="#">
                                    <span class="fa fa-shopping-basket text-success"></span>
                                    <span class="aa-cart-title text-success">SHOPPING CART</span>
                                    <span class="aa-cart-notify">@(ViewBag.NoOfItem==null ? 0 :ViewBag.NoOfItem)</span>
                                </a>

                                <div class="aa-cartbox-summary">
                                    @*<ul>
                                            @if (Session["username"] != null)
                                            {
                                                Html.RenderPartial("_CartBox");
                                            }
                                        </ul>*@

                                    <a class="aa-cartbox-checkout aa-primary-btn" href="@Url.Action("Index","CheckOut")">Checkout</a>

                                </div>
                            </div>

                            <!-- search box -->
                            <div class="aa-search-box">
                                <form action="@Url.Action("Search","Product1")" method="get">

                                    <input type="text" name="products" id="searchTxtBox" placeholder="Search product here . . . ">

                                    <button type="submit" class="bg-primary"><span class="fa fa-search"></span></button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- menu -->
    <section id="menu">
        <div class="container-fluid">
            <div class="menu-area">
                <!-- Navbar -->
                <div class="navbar navbar-default  " role="navigation">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle bg-dark" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse" style="background-color:black">
                        <!-- Left nav -->
                        <ul class="nav navbar-nav">
                            <li><a href="@Url.Action("Index","Home")">Home</a></li>

                            @{ NetShopeWeb.EfContext.dbContext db = new NetShopeWeb.EfContext.dbContext();

                                Dictionary<string, IEnumerable<string>> navbar = new Dictionary<string, IEnumerable<string>>();


                                List<NetShopeBusiness.Model.Category> Categories = db.Categories.ToList();

                                foreach (NetShopeBusiness.Model.Category cat in Categories)
                                {
                                    IEnumerable<string> subCat = db.SubCategories.Where(x => x.CategoryID == cat.CategoryID).Select(x => x.Name).ToList();
                                    navbar.Add(cat.Name, subCat);
                                }
                                int count = 0;
                                foreach (KeyValuePair<string, IEnumerable<string>> nav in navbar)
                                {
                                    if (count < 8)
                                    {
                                        <li>
                                            <a href="/Images/43329700-6489-4c40-a2bd-1f48580ce918.jpeg">@nav.Key<span class="caret"></span></a>
                                            <ul class="dropdown-menu bg-dark">

                                                @foreach (var subNav in nav.Value)
                                                {
                                                    <li class="text-primary"><a href="@Url.Action("GetProductsByCategory","Product1", new { categoryName = subNav.Trim()})"><small class="text-white">@subNav.Trim()</small></a></li>
                                                }
                                            </ul>
                                        </li>
                                        count++;
                                    }
                                } }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container-fluid">
        <div class="row">
            <div class="col">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- footer -->
    <footer id="aa-footer">
        <!-- footer bottom -->
        <div class="aa-footer-top bg-info">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="aa-footer-top-area">
                            <div class="row">
                                <div class="col-md-3 col-sm-6">
                                    <div class="aa-footer-widget">
                                        <h3>Important Links</h3>
